---
import json_programas from "@data/programas.json";
import type { CiesProgramas } from "@interfaces/cies-programas";

import wallpaper from "@assets/cies-wallpaper.jpg";
import BaseLayout from "@layouts/BaseLayout.astro";

import CardPrograma from "@components/ComponenteCardPrograma.astro";
import CiesSeccionEducacionContinua from "@components/inicio/SeccionEducacionContinua.astro";
import CiesSeccionRevistas from "@components/inicio/SeccionRevistasCarrusel.astro";
import CiesSeccionCacies from "@components/inicio/SeccionCacies.astro";
import CiesSeccionFundadores from "@components/inicio/SeccionFundadores.astro";
import CiesSeccionLibros from "@components/inicio/SeccionLibros.astro";

const data: CiesProgramas[] = json_programas as CiesProgramas[];
---

<BaseLayout
  title="CiES | Colegio Internacional de Educación Superior"
  description="CiES es un centro de estudios superiores especializado en psicología, psicoanálisis, desarrollo humano y formación continua. Conoce nuestras licenciaturas, maestrías, doctorados y programas dominicales."
  canonical="https://cies.mx"
  structuredData={{
    organization: true,
  }}
>

  <section class="cies-hero mb-4">
  <div class="hero-wrapper">
    <img
      src={wallpaper.src}
      alt="Colegio Internacional de Educación Superior"
      class="hero-img"
    />

    <div class="hero-overlay"></div>

    <div class="hero-content container">
      <div class="row">
        <div class="col-12 col-lg-8">
          <h1 class="hero-title">
            Especialistas en psicología, psicoanálisis, psicomotricidad y adicciones
          </h1>
          <div class="hero-accent"></div>
          <!-- Si luego quieres subtítulo, aquí va -->
          <!-- <p class="hero-subtitle">Texto opcional aquí</p> -->
        </div>
      </div>
    </div>
  </div>
</section>

  <div id="cies-home" class="container-fluid">
    


    <div class="row">
      <!-- <div class="col-12">
        <img src={wallpaper.src} alt="Logo Cies" class="img-fluid w-100" style="height:600px;margin-bottom:30px;" />
      </div> -->

      <div class="col-12 my-5">
        <h1 class="cies-titulo my-4 text-center">Programas Académicos</h1>
        <div class="row">
          {
            data.map((programa) => (
              <div class="col-12 col-sm-6 col-lg-4 col-xl-4 p-3">
                <CardPrograma titulo={programa.titulo} grado={programa.grado} descripcion={programa.descripcion} link={programa.link} imgSrc={programa.imgSrc} />
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <div class="row rounded-3 my-5" style="background-color:#fff;">
      <div class="col-12 col-md-7 text-center py-4">
        <CiesSeccionEducacionContinua />
      </div>
    </div>

    <div class="row my-5">
      <div class="col-12 text-center py-4 cies-revista-wrapper">
        <CiesSeccionRevistas />
      </div>
    </div>

    <div class="row rounded-3 mb-5" style="background-color:#fff;">
      <div class="col-12 col-md-5 text-center py-4"></div>
      <div class="col-12 text-center py-4">
        <CiesSeccionCacies />
      </div>
    </div>

    <div class="row">
      <div class="col-12 text-center py-4 fundadores-wrapper">
        <CiesSeccionFundadores />
      </div>
    </div>

    <div class="row">
      <div class="col-12 text-center py-4 libros-wrapper">
        <CiesSeccionLibros />
      </div>
    </div>
  </div>

</BaseLayout>
