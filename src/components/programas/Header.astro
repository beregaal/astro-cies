---
const { programa } = Astro.props;
---

<section class="cies-program-hero">
  <div class="container py-5 py-lg-6">
    <div class="row">
      <div class="col-12 col-lg-10 col-xl-8">

        <p class="cies-program-pill mb-3">
          {programa?.grado}
        </p>

        <h1 class="cies-program-title mb-3">
          {programa?.titulo}
        </h1>

        <p class="cies-program-lead mb-3 mb-lg-4">
          {programa?.descripcion}
        </p>

      </div>
    </div>
  </div>

  {/* decorativos */}
  <span class="cies-program-decor cies-program-decor--1"></span>
  <span class="cies-program-decor cies-program-decor--2"></span>
</section>
