---
import EncabezadoSeccion from "@components/EncabezadoSeccion.astro";
---

<section id="cies-inicio-formacion-continua" class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <EncabezadoSeccion kicker="Formación continua" titulo="Espacios para seguir creciendo" descripcion="Actividades académicas y clínicas para actualizarte de forma permanente." />

      <div class="cies-timeline">
        <!-- Dominicales Psicoanálisis -->
        <a href="/formacion/dominicales-psicoanalisis"
           class="cies-timeline-item d-flex align-items-center justify-content-between gap-3">
          <div class="cies-timeline-text">
            <span class="cies-pill">Dominicales</span>
            <h3 class="cies-timeline-title mb-1">Psicoanálisis</h3>
            <p class="cies-timeline-subtitle mb-0">
              Espacios clínicos de reflexión y discusión teórica los domingos.
            </p>
          </div>
          <span class="cies-timeline-icon" aria-hidden="true">
            <i class="bi bi-arrow-right"></i>
          </span>
        </a>

        <!-- Dominicales Psicomotricidad -->
        <a href="/formacion/dominicales-psicomotricidad"
           class="cies-timeline-item d-flex align-items-center justify-content-between gap-3">
          <div class="cies-timeline-text">
            <span class="cies-pill">Dominicales</span>
            <h3 class="cies-timeline-title mb-1">Psicomotricidad</h3>
            <p class="cies-timeline-subtitle mb-0">
              Trabajo corporal y vivencial para el desarrollo humano.
            </p>
          </div>
          <span class="cies-timeline-icon" aria-hidden="true">
            <i class="bi bi-arrow-right"></i>
          </span>
        </a>

        <!-- Cursos y Diplomados -->
        <a href="/formacion/cursos-diplomados"
           class="cies-timeline-item d-flex align-items-center justify-content-between gap-3">
          <div class="cies-timeline-text">
            <span class="cies-pill">Formación</span>
            <h3 class="cies-timeline-title mb-1">Cursos y Diplomados</h3>
            <p class="cies-timeline-subtitle mb-0">
              Programas teórico-prácticos para profundizar en distintas áreas.
            </p>
          </div>
          <span class="cies-timeline-icon" aria-hidden="true">
            <i class="bi bi-arrow-right"></i>
          </span>
        </a>

        <!-- Encuentros y Congresos -->
        <a href="/formacion/encuentros-congresos"
           class="cies-timeline-item d-flex align-items-center justify-content-between gap-3">
          <div class="cies-timeline-text">
            <span class="cies-pill">Eventos</span>
            <h3 class="cies-timeline-title mb-1">Encuentros y Congresos</h3>
            <p class="cies-timeline-subtitle mb-0">
              Espacios de diálogo, investigación y difusión académica.
            </p>
          </div>
          <span class="cies-timeline-icon" aria-hidden="true">
            <i class="bi bi-arrow-right"></i>
          </span>
        </a>

      </div>
    </div>
  </div>
</section>

