---
import logoBlanco from '@assets/cies-logo-blanco.png';
---

<footer id="cies-footer">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-md-3 col-xl-3 offset-xxl-1 col-xxl-3 my-4">
        <h6 class="mb-3">MENÚ</h6>
        <nav class="nav cies-nav-footer flex-column">
          <a class="nav-link" href="#">Inicio</a>
          <a class="nav-link" href="#">Nosotros</a>
          <a class="nav-link" href="#">Programas</a>
          <a class="nav-link" href="#">Instalaciones</a>
        </nav>
      </div>

      <div class="col-12 col-md-5 col-xl-6 col-xxl-4 my-4">
        <h6 class="mb-3 text-uppercase">Nuestra oferta educativa</h6>
        <nav class="nav cies-nav-footer flex-column">
          <a class="nav-link" href="#">Licenciatura en Psicología</a>
