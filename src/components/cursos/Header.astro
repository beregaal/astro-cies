---
const { curso } = Astro.props;
---

<section class="cies-page-hero">
  <div class="container py-5 py-lg-6">
    <div class="row">
      <div class="col-12 col-lg-10 col-xl-8">
        {curso?.mostrarBadge && <p class="cies-page-pill mb-3">{curso?.tipo}</p>}

        <h1 class="cies-page-title mb-3">
          {curso?.titulo}
        </h1>

        <p class="cies-page-lead mb-3 mb-lg-4">
          {curso?.descripcion}
        </p>
      </div>
    </div>
  </div>

  {/* decorativos */}
  <span class="cies-page-decor cies-page-decor--1"></span>
  <span class="cies-page-decor cies-page-decor--2"></span>
</section>
