---
const { dia, tipo, titulo, hora } = Astro.props;
---

<div class="event-card shadow-sm mb-4 rounded-3 overflow-hidden">
  <!-- Encabezado -->
  <div class="d-flex justify-content-between align-items-center px-3 py-2 event-header">
    <div class="d-flex align-items-center gap-2">
      <i class="bi bi-calendar-week event-icon" aria-hidden="true"></i>
      <span class="fw-semibold">{dia}</span>
    </div>
    <span class="badge event-badge">{tipo}</span>
  </div>

  <!-- Cuerpo -->
  <div class="p-3">
    <h6 class="mb-1 fw-semibold">{titulo}</h6>
    <p class="text-muted mb-0">
      <i class="bi bi-clock" aria-hidden="true"></i>
      <span class="ms-1">{hora}</span>
    </p>
  </div>
</div>

<style>
  .event-card {
    background: var(--cies-white-primary);
    border: 1px solid rgba(0, 0, 0, 0.03);
  }

  .event-header {
    background: var(--cies-white-secondary);
    border-bottom: 1px solid rgba(0, 0, 0, 0.03);
    font-size: 0.9rem;
    color: var(--cies-green-secondary);
  }

  .event-icon {
    font-size: 1.1rem;
    color: var(--cies-green-primary);
  }

  .event-badge {
    background-color: var(--cies-green-primary);
    color: var(--cies-white-primary);
    border-radius: 999px;
    font-weight: 500;
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
  }
</style>
